{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2015"],
    "allowJs": true,
    "outDir": "./build",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src/",
    "paths": {
      "@domain/*": ["Domain/*"],
      "@infra/*": ["Infra/*"],
      "@shared/*": ["Shared/*"]
    },
    "typeRoots": ["./types", "node_modules/@types"],
    "types": ["jest"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "node_modules/@types/jest","./types"],
  "exclude": ["node_modules"]
}
